---
import "../styles/style.css";
const { title, body } = Astro.props;
---

<section class="fp-text-section">
  <h2>{title}</h2>
  <p>{body}</p>
</section>

<style>
  p {
    max-width: 40ch;
    margin: 0 auto;
  }
  .fp-text-section {
    margin: 0 50px;
    text-align: center;
  }

  body {
    color: #642d2d;
  }

  @media screen and (min-width: 800px) {
    .fp-text-section {
      text-align: center;
      max-width: 75ch;
      margin: 0 auto;
    }
  }
</style>
